<div ng-controller="SaveCdeCtrl">
<h4>General Details</h4>    
<dl class="dl-horizontal">
    <dt>Name: </dt>
    <dd id="dd_general_name">    
        <div inline-edit id="nameEdit" model="cde.naming[0].designation" is-allowed="isAllowed(cde)" on-ok="stageCde(cde)"> </div>
    </dd>    
    <dt>Steward: </dt><dd>{{cde.stewardOrg.name}}</dd>
    <dt>Definition: </dt><dd id="dd_def">   
        <div inline-area-edit inline-area-visibility="inlineAreaEditVisibility" model="cde.naming[0].definition" is-allowed="isAllowed(cde)" def-format="cde.naming[0].definitionFormat" on-ok="stageCde(cde)"> </div>
    </dd>
    <dt>Used By: </dt><dd id="dd_usedBy">
        <span ng-switch="cde.classification.length > 0">
            <span ng-switch-when="false">None</span>
            <span ng-switch-default>
                <span ng-repeat="cl in cde.classification">{{cl.stewardOrg.name}} </span>
            </span>
        </span>
    </dd>
    <dt>Unit of Measure: </dt>
    <dd id="dd_uom">
        <div inline-edit id="uomEdit" model="cde.valueDomain.uom" is-allowed="isAllowed(cde)" on-ok="stageCde(cde)"> </div>   
    </dd> 
    <dt ng-show="cde.origin">Origin: </dt><dd>{{cde.origin}}</dd>
    <dt ng-show="cde.source">Source: </dt><dd>{{cde.source}}</dd>
    <dt id="dt_status">Status: </dt><dd id="dd_status"><i id="editStatus" ng-show="isAllowed(cde)" class="fa fa-edit" ng-click="openRegStatusUpdate()"></i> {{cde.registrationState.registrationStatus}}</dd>
    <dt ng-show="cde.views">Views: </dt><dd id="dd_views">{{cde.views}}</dd>
</dl>

<script type="text/ng-template" id="regStatusUpdate.html">
    <%- include regStatusUpdateModal.ejs %>
</script>
</div>
