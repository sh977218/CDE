<% 
    var conceptConfigurations = [
            {deConceptName: "Data Element", deConceptSource: "dataElementConcept", deConceptId: "decConceptRemove", deConceptCallback: "removeDecConcept"},
            {deConceptName: "Class", deConceptSource: "objectClass", deConceptId: "ocConceptRemove", deConceptCallback: "removeOcConcept"},
            {deConceptName: "Property", deConceptSource: "property", deConceptId: "propConceptRemove", deConceptCallback: "removePropConcept"},
        ];
%>

<% for (var i in conceptConfigurations) {
    var conceptConf = conceptConfigurations[i]; %>
    <div ng-show="elt.<%- conceptConf.deConceptSource %>.concepts.length > 0">
    <h5 tabindex="0"><%- conceptConf.deConceptName %></h5>
    <table class="table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th tabindex="0">Code Name</th>
                <th tabindex="0">Code System</th>
                <th tabindex="0">Code ID</th>
                <th tabindex="0" id="conceptActions" ng-show="canCurate"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="concept in elt.<%- conceptConf.deConceptSource %>.concepts">
                <td><a tabindex="0" href ng-click="relatedCdes(concept)">{{concept.name}}</a></td>
                <td tabindex="0">{{concept.origin}}</td>
                <td tabindex="0">{{concept.originId}}</td>
                <td headers="actions" ng-show="canCurate">
                     <a tabindex="0" href id="<%- conceptConf.deConceptId %>-{{$index}}" class="fa fa-trash-o" ng-click="<%- conceptConf.deConceptCallback %>($index)" title="Remove" href=""></a>
                </td>
            </tr>
        </tbody>
    </table>
    </div>

<% } %>