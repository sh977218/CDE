<div class="container-fluid">
    <h1 class="page-header">Quick Board</h1>

    <div ng-show="cdes.length < 1" class="container">
        <h3>The quick board is empty.</h3>
        <p>Note: Click on <i class="fa fa-plus"></i> to add a CDE to the quick board. <a href="#/search">Go to the search page and get started.</a></p>
    </div>

    <div ng-if="cdes.length > 0" >
        <form class="form-inline">
            <button id="qb.accordion" ng-hide="isAccordionView" value="Accordion View" ng-click="showAccordionView()" class="btn btn-default">
                <i class="fa fa-table"></i>
                Accordion View
            </button>
            
            <button id="qb.gridview" ng-show="isAccordionView" value="Grid View" ng-click="showGridView()" class="btn btn-default">
                <i class="fa fa-table"></i>
                Grid View
            </button>

            <button id="qb.compare" value="Side by Side Compare" ng-click="gotoCompare()" class="btn btn-default">
                <i class="fa fa-search"></i>
                Side by Side Compare
            </button>

            <button id="qb.openCloseAll" ng-show="isAccordionView" ng-click="openCloseAllSwitch('quickboard');openCloseAll(cdes,'quickboard')" class="btn btn-default btn-checkbox">
                <span ng-hide="openCloseAllModel.quickboard"><i class="fa fa-expand"></i> Expand All</span>
                <span ng-show="openCloseAllModel.quickboard"><i class="fa fa-compress"></i> Collapse All</span>
            </button>

            <button id="qb.empty" value="Empty Quick Board" ng-click="emptyQuickBoardAndScreen()" class="btn btn-default">
                <i class="fa fa-trash-o"></i>
                Empty Quick Board
            </button>
        </form>
        <br/>

        <div ng-show="isAccordionView">
            <div ng-include="'accordionList.html'" ng-init="ejsPage = 'quickboard';"></div>
        </div>

        <div ng-hide="isAccordionView">
            <div id="quickBoardGridView" class="gridStyle" ng-grid="gridOptions"></div>
        </div>

    </div>
</div>