<div class="container-fluid">
    <h1 class="page-header">
        Quick Board

        <div class="btn-group" ng-if="quickBoard.length>0">
            <button id="qb.accordion" ng-disabled="viewType.accordion" value="Accordion View" ng-click="showAccordionView()" class="btn btn-default">
                <i class="fa fa-bars"></i> Accordion View
            </button>

            <button id="qb.gridview" ng-disabled="viewType.grid" value="Grid View" ng-click="showGridView()" class="btn btn-default">
                <i class="fa fa-table"></i> Grid View
            </button>

            <button id="qb.compare" ng-disabled="viewType.sidebyside" value="Side by Side View" ng-click="showSideBySideView()" class="btn btn-default">
                <i class="fa fa-search"></i> Side by Side View
            </button>
        </div>

        <div class="btn-group" ng-if="quickBoard.length>0">
            <button id="qb.openCloseAll" ng-disabled="!viewType.accordion" ng-click="openCloseAllSwitch(cdes, 'quickboard');" class="btn btn-default btn-checkbox">
                <span ng-hide="openCloseAllModel.quickboard"><i class="fa fa-expand"></i> Expand All</span>
                <span ng-show="openCloseAllModel.quickboard"><i class="fa fa-compress"></i> Collapse All</span>
            </button>

            <button id="qb.empty" value="Empty Quick Board" ng-click="emptyQuickBoardAndScreen()" class="btn btn-default">
                <i class="fa fa-trash-o"></i> Empty Quick Board
            </button>
        </div>
    </h1>
    
    <div ng-if="quickBoard.length>0 && cdes.length<1" class="container"><h4><i class="fa fa-spinner fa-spin"></i> Loading...</h4></div>

    <div ng-if="quickBoard.length<1" class="container">
        <h3>The quick board is empty.</h3>
        <p>Note: Click on <i class="fa fa-plus"></i> to add a CDE to the quick board. <a href="/#/cde/search">Go to the search page and get started.</a></p>
    </div>

    <div ng-if="cdes.length>0" >
        <div ng-show="viewType.accordion">
            <div ng-include="'/template/cde/cdeAccordionList'" ng-init="ejsPage = 'quickboard';"></div>
        </div>

        <div ng-show="viewType.grid">
            <div id="quickBoardGridView" class="gridStyle" ng-grid="gridOptions"></div>
        </div>
        
        <div ng-show="viewType.sidebyside">
            <div ng-include="'/template/cde/deCompare'"></div>
        </div>        

    </div>
</div>
