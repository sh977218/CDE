<div class="container-fluid">
    <h1 class="page-header">
        Quick Board

        <button id="qb.accordion" ng-show="!viewType.accordion && quickBoard.length>0" value="Accordion View" ng-click="showAccordionView()" class="btn btn-default">
            <i class="fa fa-bars"></i> Accordion View
        </button>

        <button id="qb.gridview" ng-show="!viewType.grid && quickBoard.length>0" value="Grid View" ng-click="showGridView()" class="btn btn-default">
            <i class="fa fa-table"></i> Grid View
        </button>

        <button id="qb.compare" ng-show="!viewType.sidebyside && quickBoard.length>0" value="Side by Side View" ng-click="showSideBySideView()" class="btn btn-default">
            <i class="fa fa-search"></i> Side by Side View
        </button>

        <button id="qb.openCloseAll" ng-show="viewType.accordion && quickBoard.length>0" ng-click="openCloseAllSwitch(cdes, 'quickboard');" class="btn btn-default btn-checkbox">
            <span ng-hide="openCloseAllModel.quickboard"><i class="fa fa-expand"></i> Expand All</span>
            <span ng-show="openCloseAllModel.quickboard"><i class="fa fa-compress"></i> Collapse All</span>
        </button>

        <button id="qb.empty" ng-show="quickBoard.length>0" value="Empty Quick Board" ng-click="emptyQuickBoardAndScreen()" class="btn btn-default">
            <i class="fa fa-trash-o"></i> Empty Quick Board
        </button>
    </h1>
    
    <div ng-show="quickBoard.length>0 && cdes.length<1" class="container"><h4><i class="fa fa-spinner fa-spin"></i> Loading...</h4></div>

    <div ng-show="quickBoard.length<1" class="container">
        <h3>The quick board is empty.</h3>
        <p>Note: Click on <i class="fa fa-plus"></i> to add a CDE to the quick board. <a href="#/search">Go to the search page and get started.</a></p>
    </div>

    <div ng-show="cdes.length>0" >
        <div ng-show="viewType.accordion">
            <div ng-include="'/template/cde/cdeAccordionList'" ng-init="ejsPage = 'quickboard';"></div>
        </div>

        <div ng-show="viewType.grid">
            <div id="quickBoardGridView" class="gridStyle" ng-grid="gridOptions"></div>
        </div>
        
        <div ng-show="viewType.sidebyside">
            <div ng-include="'/template/cde/deCompare'"></div>
        </div>        

    </div>
</div>
