<div class="container-fluid">
    <div class="alert alert-info mt20" ng-show="elt.unsaved"><i class="fa fa-exclamation-triangle"></i> This element is not saved.</div>
    <div class="alert alert-warning mt20" role="alert" ng-show="elt.archived"><i class="fa fa-exclamation-triangle"></i> <strong>Warning:</strong> this form is archived.</div> 

    <h3>{{elt.naming[0].designation}}</h3>

    <div tabset>
       <div tab heading="General Details">
            <div ng-include="'/form/public/html/formGeneralDetails.html'"></div>
       </div>
       <div tab heading="Form Description">
            <div ng-include="'/form/public/html/formDescription.html'"></div>
       </div>
        <div tab heading="Attachments">
            <div ng-include="'/system/public/html/attachments.html'"></div>
        </div>
    </div>

    <div class="row" ng-controller="VersionCtrl">
         <div class="col-md-12" ng-show="elt.unsaved">
             <button class="btn cancel" ng-click="revert()">Discard Changes</button>
             <button class="btn btn-primary" ng-click="openSave(elt, '#/formView?_id=')" id="openSave">Save</button>
         </div>
     </div>
</div>