{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://cde.nlm.nih.gov/json-schema/Form",
  "definitions": {
    "formElement": {
      "type": "object",
      "properties": {
        "elementType": {
          "type": "string",
          "enum": [
            "section",
            "question",
            "form"
          ]
        },
        "instructions": {
          "title": "instructions",
          "type": "object",
          "properties": {
            "value": {
              "type": "string"
            },
            "valueFormat": {
              "type": "string",
              "description": "If 'html', interpret as HTML",
              "enum": [
                "",
                "html"
              ]
            }
          }
        },
        "inForm": {
          "title": "inForm",
          "type": "object",
          "properties": {
            "form": {
              "title": "form",
              "type": "object",
              "properties": {
                "ids": {
                  "type": "array",
                  "items": {
                    "$ref": "AdminItem#/definitions/identifier"
                  }
                },
                "name": {
                  "type": "string"
                },
                "tinyId": {
                  "type": "string"
                },
                "version": {
                  "type": "string"
                }
              }
            }
          }
        },
        "label": {
          "type": "string"
        },
        "mapTo": {
          "title": "mapTo",
          "type": "object",
          "properties": {
            "fhir": {
              "title": "fhir",
              "type": "object",
              "properties": {
                "resourceType": {
                  "type": "string"
                }
              }
            }
          }
        },
        "question": {
          "allOf": [
            {
              "$ref": "AdminItem#/definitions/datatypeContainer"
            },
            {
              "title": "question",
              "type": "object",
              "properties": {
                "answers": {
                  "type": "array",
                  "items": {
                    "$ref": "AdminItem#/definitions/permissibleValue"
                  }
                },
                "cde": {
                  "title": "cde",
                  "type": "object",
                  "properties": {
                    "derivationRules": {
                      "type": "array",
                      "items": {
                        "$ref": "AdminItem#/definitions/derivationRule"
                      }
                    },
                    "ids": {
                      "type": "array",
                      "items": {
                        "$ref": "AdminItem#/definitions/identifier"
                      }
                    },
                    "name": {
                      "type": "string"
                    },
                    "permissibleValues": {
                      "type": "array",
                      "items": {
                        "$ref": "AdminItem#/definitions/permissibleValue"
                      }
                    },
                    "tinyId": {
                      "type": "string"
                    },
                    "version": {
                      "type": "string"
                    }
                  }
                },
                "defaultAnswer": {
                  "type": "string"
                },
                "editable": {
                  "type": "boolean",
                  "default": true
                },
                "invisible": {
                  "type": "boolean",
                  "default": false
                },
                "multiselect": {
                  "type": "boolean"
                },
                "required": {
                  "type": "boolean",
                  "default": false
                },
                "unitsOfMeasure": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "code": {
                        "type": "string"
                      },
                      "system": {
                        "type": "string"
                      }
                    }
                  }
                }
              }
            }
          ]
        },
        "repeat": {
          "type": "string"
        },
        "repeatsFor": {
          "type": "string"
        },
        "section": {
          "title": "section",
          "type": "object",
          "properties": {}
        },
        "showIfExpression": {
          "type": "string"
        },
        "skipLogic": {
          "title": "skipLogic",
          "type": "object",
          "properties": {
            "action": {
              "type": "string",
              "enum": [
                "show",
                "enable"
              ]
            },
            "condition": {
              "type": "string"
            }
          }
        },
        "formElements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/formElement"
          }
        }
      }
    }
  },
  "title": "Form",
  "allOf": [
    {
      "$ref": "AdminItem#/definitions/adminItem"
    },
    {
      "type": "object",
      "properties": {
        "copyright": {
          "type": "object",
          "properties": {
            "authority": {
              "type": "string"
            },
            "text": {
              "type": ["string", "null"]
            }
          },
          "title": "copyright",
          "default": {
            "text": null
          }
        },
        "displayProfiles": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "sectionsAsMatrix": {
                "type": "boolean"
              },
              "displayCopyright": {
                "type": "boolean"
              },
              "displayValues": {
                "type": "boolean"
              },
              "displayInstructions": {
                "type": "boolean"
              },
              "displayNumbering": {
                "type": "boolean"
              },
              "displayType": {
                "type": "string",
                "enum": [
                  "Dynamic",
                  "Follow-up"
                ],
                "default": "Dynamic"
              },
              "metadata": {
                "title": "metadata",
                "type": "object",
                "properties": {
                  "device": {
                    "type": "boolean"
                  }
                }
              },
              "numberOfColumns": {
                "type": "number",
                "minimum": 1,
                "maximum": 6
              },
              "displayInvisible": {
                "type": "boolean"
              },
              "repeatFormat": {
                "type": "string",
                "default": ""
              },
              "answerDropdownLimit": {
                "type": "number",
                "minimum": 0
              },
              "unitsOfMeasureAlias": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "unitOfMeasure": {
                      "title": "unitOfMeasure",
                      "type": "object",
                      "properties": {
                        "code": {
                          "type": "string"
                        },
                        "system": {
                          "type": "string"
                        }
                      }
                    },
                    "alias": {
                      "type": "string"
                    },
                    "_id": {
                      "$ref": "AdminItem#/definitions/objectId"
                    }
                  }
                }
              },
              "fhirProcedureMapping": {
                "title": "fhirProcedureMapping",
                "anyOf": [
                  {
                    "type": "null"
                  },
                  {
                    "type": "object",
                    "properties": {
                      "statusQuestionID": {
                        "type": ["string", "null"]
                      },
                      "statusStatic": {
                        "type": ["string", "null"]
                      },
                      "performedDate": {
                        "type": ["string", "null"]
                      },
                      "procedureQuestionID": {
                        "type": ["string", "null"]
                      },
                      "procedureCode": {
                        "type": ["string", "null"]
                      },
                      "procedureCodeSystem": {
                        "type": ["string", "null"]
                      },
                      "bodySiteQuestionID": {
                        "type": ["string", "null"]
                      },
                      "bodySiteCode": {
                        "type": ["string", "null"]
                      },
                      "bodySiteCodeSystem": {
                        "type": ["string", "null"]
                      },
                      "usedReferences": {
                        "type": ["string", "null"]
                      },
                      "usedReferencesMaps": {
                        "anyOf": [
                          {
                            "type": "array",
                            "items": {
                              "type": "string"
                            }
                          },
                          {
                            "type": "null"
                          }
                        ]
                      },
                      "complications": {
                        "type": ["string", "null"]
                      }
                    }
                  }
                ]
              }
            }
          }
        },
        "elementType": {
          "default": "form"
        },
        "formElements": {
          "type": "array",
          "items": { "$ref": "#/definitions/formElement" }
        },
        "isCopyrighted": {
          "type": "boolean"
        },
        "mapTo": {
          "title": "mapTo",
          "type": "object",
          "properties": {
            "fhir": {
              "title": "fhir",
              "type": "object",
              "properties": {
                "resourceType": {
                  "type": "string"
                }
              }
            }
          }
        },
        "noRenderAllowed": {
          "type": "boolean"
        }
      },
      "required": [
        "registrationState",
        "stewardOrg"
      ]
    }
  ]
}
