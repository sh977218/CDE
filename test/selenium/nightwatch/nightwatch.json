{
  "src_folders" : ["nwTests"],
  "output_folder" : "reports",
  "custom_assertions_path" : "",
  "page_objects_path" : "",
  "globals_path" : "",

  "custom_commands_path" : "./customCommands",
  "selenium" : {
    "start_process" : true,
    "server_path" : "../selenium-server-standalone-2.44.0.jar",
    "log_path" : "",
    "host" : "localhost",
    "port" : 4444,
    "cli_args" : {
      "webdriver.chrome.driver" : "../chromedriver.exe",
      "webdriver.ie.driver" : ""
    }
  },

  "test_settings" : {
    "default" : {
      "selenium_port"  : 4444,
      "selenium_host"  : "localhost",
      "silent": true,
      "screenshots" : {
        "enabled" : true,
        "path" : "./screenshots",
        "on_failure": true
      },
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      },
      "globals": {
        "waitForConditionTimeout": 10000
        , "waitForConditionPollInterval": 200
      }
    },
    "chrome" : {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true
      }
    }
  },
  "test_workers" : {
    "enabled": true,
    "workers": 25
  }
}


