{
    "rulesDirectory": [
        "node_modules/codelyzer"
    ],
    "jsRules": {
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    },
    "rules": {
        "arrow-parens": [true, "ban-single-arg-parens"],
        "class-name": true,
        "comment-format": [
            true,
            "check-space"
        ],
        "component-class-suffix": true,
        "component-selector": [true, "element", ["nih", "cde"], "kebab-case"],
        "curly": [true, "ignore-same-line"],
        "directive-class-suffix": true,
        "directive-selector": [true, "attribute", ["nih", "cde"], "camelCase"],
        "import-destructuring-spacing": true,
        "indent": [
            true,
            "spaces"
        ],
        "member-access": false,
        "no-attribute-parameter-decorator": true,
        "no-eval": true,
        "no-forward-ref": true,
        "no-input-rename": true,
        "no-internal-module": true,
        "no-output-rename": true,
        "no-trailing-whitespace": true,
        "no-unsafe-finally": true,
        "no-var-keyword": true,
        "object-literal-key-quotes": [
            true,
            "as-needed"
        ],
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace"
        ],
        "quotemark": [true, "single", "avoid-escape"],
        //        "pipe-naming": [true, "camelCase", "cde"],
        "semicolon": [
            true,
            "always"
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "typedef-whitespace": [
            true,
            {
                "call-signature": "nospace",
                "index-signature": "nospace",
                "parameter": "nospace",
                "property-declaration": "nospace",
                "variable-declaration": "nospace"
            }
        ],
        "use-host-property-decorator": true,
        "use-input-property-decorator": true,
        "use-life-cycle-interface": true,
        "use-pipe-transform-interface": true,
        "use-output-property-decorator": true,
        "variable-name": [
            true,
            "ban-keywords"
        ],
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ]
    }
}