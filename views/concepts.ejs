<h4>Concepts</h4>
<div ng-controller="ConceptsCtrl">
<div class="row-fluid">
    <div class="span5">

        <%- include deConcepts.ejs %>
        
        <hr/>

        <button class="btn btn-small" value="add" ng-click="openNewConcept()" id="addConcept" ng-show="isAllowed(cde)"><i class="fa fa-plus"> </i> Add Concept</button>
    </div>

    <div class="span7" ng-show="cdes">
        <h4>Sharing Concept</h4>
        <accordion>
            <accordion-group ng-repeat="cde in cdes" heading="{{cde.stewardOrg.name}} -- {{cde.naming[0].designation}}">
                 <div class="row-fluid">
                        <%- include cdegeneraldetails.ejs %>
                  </div>
                  <div class="row-fluid" >
                    <a class='btn' ng-href="#/deview/?cdeId={{cde._id}}"><i class="fa fa-eye"></i> View Full Detail</a>
                  </div>
            </accordion-group>
        </accordion>
    </div>
</div>

<script type="text/ng-template" id="newConceptModalContent.html">
    <%- include newConceptModal.ejs %>
</script>
</div>
