<form class="span10 offset1" name="createCde">
    <fieldset>
        <legend>Create Data Element</legend>
        
        <label>Name</label>
        <input type="text" required ng-model="cde.name" name="cde.name">
        <span ng-show="createCde.cde.name.$error.required" class="help-inline">Required</span>

        <label>Definition</label>
        <input type="text" required ng-model="cde.definition" name="cde.definition">
        <span ng-show="createCde.cde.definition.$error.required" class="help-inline">Required</span>

        <label>Version</label>
        <input type="text" ng-model="cde.version" name="cde.version">

        <label for="cde.owningRegAuth">Registration Authority</label>
        <select ng-model="cde.owningRegAuth" name="cde.owningRegAuth" required>
            <option value="">Select One</option>
            <option ng-repeat="c in myRegAuths" ng-value="c">{{c}}</option>
        </select>
        <br />

        <a href="#/" class="btn">Cancel</a>
        <input type="submit" ng-click="save()" class="btn btn-success" value="Save" ng-disabled="isClean() || createCde.$invalid"></input>
    </fieldset>
</form>

