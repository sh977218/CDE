<h3>Create Form</h3>
<% if (user && user.formAdmin) { %>
<div ng-init="initGroups([<% for (var i in user.contextAdmin) { %>'<%= user.contextAdmin[i] %>'<% if (i < user.contextAdmin.length - 1) { %>,<% } %><% } %>])"/>
<% } %>

<label for="form.name"/>Name</label><input type="text" required ng-model="form.name" name="form.name"></input><br />
<label for="form.instructions">Instructions</label><textarea required ng-model="form.instructions" name="form.instructions"></textarea><br />

<label for="form.owningContext">Context</label>
<select ng-model="form.owningContext" name="form.owningContext" required>
    <option value="">Select One</option>
    <option ng-repeat="g in userGroups" ng-value="g">{{g}}</option>
</select>
 <br />

<a href="#/listforms" class="btn">Cancel</a>
<button ng-click="save()" class="btn-warning">Save</button>

