<% 
    var conceptConfigurations = [
            {deConceptName: "Data Element", deConceptSource: "dataElementConcept", deConceptId: "decConceptRemove", deConceptCallback: "removeDecConcept"},
            {deConceptName: "Class", deConceptSource: "objectClass", deConceptId: "ocConceptRemove", deConceptCallback: "removeOcConcept"},
            {deConceptName: "Property", deConceptSource: "property", deConceptId: "propConceptRemove", deConceptCallback: "removePropConcept"},
        ];
%>

<% for (var i in conceptConfigurations) {
    var conceptConf = conceptConfigurations[i]; %>
    <div ng-show="cde.<%- conceptConf.deConceptSource %>.concepts.length > 0">
    <h5><%- conceptConf.deConceptName %></h5>
    <table class="table-bordered table-condensed table-striped">
        <thead>
            <tr>
                <th>Code Name</th>
                <th>Code System</th>
                <th>Code ID</th>
                <th id="conceptActions" ng-show="isAllowed(cde)"></th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="concept in cde.<%- conceptConf.deConceptSource %>.concepts">
                <td><a ng-click="relatedCdes(concept)">{{concept.name}}</a></td>
                <td>{{concept.origin}}</td>
                <td>{{concept.originId}}</td>
                <td headers="actions" ng-show="isAllowed(cde)">
                     <a id="<%- conceptConf.deConceptId %>-{{$index}}" class="fa fa-trash-o" ng-click="<%- conceptConf.deConceptCallback %>($index)" title="Remove" href=""></a>
                </td>
            </tr>
        </tbody>
    </table>
    </div>

<% } %>