<dl class="dl-horizontal">
  <dt>Link: </dt>
  <dd>
        <span>
            <span ng-hide="editMode">
                <i ng-show="isAllowed(cde)" class="fa fa-edit" ng-click="editMode=true"></i> {{cde.valueDomain.datatypeExternallyDefined.link | placeholdEmpty}}
            </span> 
            <span ng-show="editMode">                       
                <input type="text" ng-model="cde.valueDomain.datatypeExternallyDefined.link" class="form-control"/>
                <button class="fa fa-check" ng-click="editMode = false; stageCde(cde)"> Confirm</button>
                <button class="fa fa-times" ng-click="editMode = false"> Discard</button>
            </span>       
        </span>
  </dd>
  <dt>Description: </dt>
  <dd>
    <div>
        <div ng-hide="editMode" ng-switch="defFormat">
           <i ng-show="isAllowed(cde)" class="fa fa-edit" ng-click="editMode=true"></i>&nbsp;
           <span ng-switch-default><span ng-bind="cde.valueDomain.datatypeExternallyDefined.description"></span></span>
           <span ng-switch-when="html"><span ng-bind-html="cde.valueDomain.datatypeExternallyDefined.description"></span></span>
        </div>
        <div ng-show="editMode">
           <div class="btn-group definitionFormatRadio">
               <button type="button" class="btn btn-default btn-xs" ng-model="defFormat" btn-radio="null">Plain Text</button>
               <button type="button" class="btn btn-default btn-xs" ng-model="defFormat" btn-radio="'html'">Rich Text</button>
           </div>                            
           <textarea ng-show="defFormat != 'html'" ng-model="cde.valueDomain.datatypeExternallyDefined.description" class="form-control"></textarea> 
           <div text-angular ng-show="defFormat == 'html'" ng-model="cde.naming[0].definition" ta-toolbar-group-class="btn-group btn-group-sm" ></div>                            
           <button class="fa fa-check" ng-click="editMode = false; stageCde(cde)">Confirm</button>
           <button class="fa fa-times" ng-click="editMode = false">Cancel</button>
        </div>
    </div>
  </dd>
</dl>