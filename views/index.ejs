<!doctype html>
<html xmlns:ng="http://angularjs.org" ng-app="cde" id="ng-app" lang="en">
    <head>        
        <title>NLM CDE App</title>
        <script src="assets/js/angular-1.2.15.min.js"></script>
        <script src="assets/js/angular-route.min.js"></script>
        <script src="assets/js/angular-resource.min.js"></script>
        <script src="assets/js/angular-sanitize.min.js"></script>
        <script src="assets/js/textAngular-1.2.0.min.js"></script>      
        <script src="js/cde.js"></script>
        <script src="js/resources.js"></script>
        <script src="js/controllers.js"></script>
        <script src="assets/js/ui-bootstrap-tpls-0.10.0.min.js"></script>
        <link rel="stylesheet" href="assets/bootstrap-3.1.1/css/bootstrap.min.css">
        <link rel="stylesheet" type="text/css" href="assets/font-awesome-4.0.3/css/font-awesome.css">
        <link href="css/style.css" rel="stylesheet" type="text/css" media="all" />

        <!-- fixes an issue in bootstrap #1078 -->
        <style>
            .modal-body{overflow-y: inherit;}
            .hand-cursor {cursor: pointer;}
        </style>

    </head>
    <body>
        <div class="container-fluid" ng-controller="MainCtrl">
            <nav class="navbar navbar-default" role="navigation">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <a class="navbar-brand" href="/">NLM CDEs</a>
                    </div>
                    <div class="collapse navbar-collapse" id="main-navbar-collapse">
                        <ul class="nav navbar-nav">
                            <li class="{{menuHome}}"><a href="/">CDEs</a></li>
                            <li ng-show='isOrgCurator()' class="dropdown">    
                                <a class="dropdown-toggle" data-toggle="dropdown-c" href="#">Create <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#/createCde">CDE</a></li>
                                </ul>
                            </li>       
                            <li class="{{menuBoardList}}"><a href="#/boardList">Boards</a></li>
                            <li class="{{menuMyBoards}}" ng-show="user._id"><a href="#/myboards">My Boards</a></li>
                            <li class="{{menuCompare}}">
                                <p class="navbar-text"><a class="navbar-link" href="#/deCompare" style="text-decoration:none;">Compare (
                                    <span ng-switch="compareCart.length">
                                        <span ng-switch-when="0">empty</span>
                                        <span ng-switch-when="2">full</span>
                                        <span ng-switch-default>{{compareCart.length}}</span>
                                    </span>)
                                    </a>
                                    <a class="fa fa-trash-o navbar-link" style="text-decoration:none;" ng-show="compareCart.length > 0" ng-click="emptyCart()" title="Empty cart" id="emptyCart"></a>
                                </p>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="{{menuLogin}}" ng-show='!user._id'><a href="#/login">Log In</a></li>
                            <li class="dropdown {{menuAccount}}" ng-show="user._id">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#">Account <span class="caret"></span></a>
                                <ul class="dropdown-menu"> 
                                    <li ng-show='user._id'><a href="#/profile">Profile</a></li>
                                    <li ng-show="isOrgCurator()"><a href="#/classificationmanagement">Classifications</a></li>
                                    <li ng-show="isOrgAdmin() && !user.siteAdmin"><a href="#/orgaccountmanagement">Account Management</a></li>
                                    <li ng-show='user._id && user.siteAdmin'><a href="#/siteaccountmanagement">Site Management</a></li>
                                    <li ng-show='user._id'><a href="/logout">Log Out</a></li>                                         
                                </ul>
                            </li>
                        </ul>
                    </div>                
                </div>                
            </nav>
        <div class="navbar-fixed-bottom">
            <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)">{{alert.msg}}</alert>
        </div>
        <div ng-view>
        </div>            
    </div>
    <script src="assets/js/diff_match_patch.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script src="assets/bootstrap-3.1.1/js/bootstrap.min.js"></script>
    
  </body>
</html> 
