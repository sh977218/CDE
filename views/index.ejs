    <body>
        <div ng-controller="MainCtrl">
            <!--
            *** navagation bar ***
            -->
            <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">
                <div class="container">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="#">
                            <strong>NLM CDE</strong>
                        </a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="{{menuSearch}}"><a href="#/search">Search</a></li>
                            <li ng-show='isOrgCurator()' class="dropdown">    
                                <a class="dropdown-toggle" data-toggle="dropdown-c" href="#">Create <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li><a href="#/createCde">CDE</a></li>
                                </ul>
                            </li>
                            <li class="{{menuBoardList}}"><a href="#/boardList">Boards</a></li>
                            <li class="{{menuMyBoards}}" ng-show="user._id"><a href="#/myboards">My Boards</a></li>
                            <li class="{{menuCompare}}">
                                <p class="navbar-text"><a class="navbar-link" href="#/quickBoard" style="text-decoration:none;">Quick Board (
                                    <span ng-switch="compareCart.length">
                                        <span ng-switch-when="0">empty</span>
                                        <span ng-switch-when="10">full</span>
                                        <span ng-switch-default>{{compareCart.length}}</span>
                                    </span>)
                                    </a>
                                    <a class="fa fa-trash-o navbar-link" style="text-decoration:none;" ng-show="compareCart.length > 0" ng-click="emptyCart()" title="Empty cart" id="emptyCart"></a>
                                </p>
                            </li>
                        </ul>
                        <ul class="nav navbar-nav navbar-right">
                            <li class="{{menuLogin}}" ng-show='!user._id'><a href="#/login" id="login_link">Log In</a></li>
                            <li class="dropdown {{menuAccount}}" ng-show="user._id">
                                <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="username_link">{{user.username}}<span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    <li ng-show='user._id'><a href="#/profile">Profile</a></li>
                                    <li ng-show='isOrgCurator()||isOrgAdmin()'><a href="#/inbox">Inbox</a></li>
                                    <li ng-show="isOrgCurator()"><a href="#/classificationmanagement">Classifications</a></li>
                                    <li ng-show="isOrgAdmin() && !user.siteAdmin"><a href="#/orgaccountmanagement">Account Management</a></li>
                                    <li ng-show='user._id && user.siteAdmin'><a href="#/siteaccountmanagement">Site Management</a></li>
                                    <li ng-show='user._id && user.siteAdmin'><a href="#/siteAudit">Audit</a></li>
                                    <li ng-show='user._id'><a href="/logout">Log Out</a></li>                                         
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="navbar-fixed-bottom">
                <alert ng-repeat="alert in alerts" type="alert.type" close="closeAlert($index)">{{alert.msg}}</alert>
            </div>
            
            <div ng-view>
            </div>
        </div>
            
