<div >
    <div ng-hide="editMode">
        <i ng-show="isAllowed()" class="icon-pencil" ng-click="value=model; editMode=true" tooltip="Edit"></i> {{model}}
        <!--{{model}}<button ng-show="isAllowed()" class="icon-pencil pull-right" ng-click="value=model; editMode=true"/>-->
    </div>
    <div ng-show="editMode">
        <input type="text" ng-model="value" />
        <button class="icon-ok" ng-click="model = value; editMode = false; onOk()"/>
        <button class="icon-remove" ng-click="editMode = false"/>
    </div>       
</div>
