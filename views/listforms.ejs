<a class="btn btn-success" href="#/createform"><i class="icon-plus-sign icon-large">Add</i></a>
<accordion>
    <accordion-group ng-repeat="form in forms" heading="{{form.owningContext}} -- {{form.name}}">
        <div class="row-fluid">
            <div class="span12">
                <h4>General Details</h4>
                <label class="label">Name: </label><div class="readonly-text">{{form.name}}</div>
                <label class="label">Owner: </label><div class="readonly-text">{{form.owningContext}}</div>
                <label class="label">Instructions: </label><div class="readonly-text">{{form.created | date: 'MM/dd/yyyy @ h:mma'}}</div>                
                <label class="label">Created: </label><div class="readonly-text">{{form.instructions}}</div>                
            </div>            
        </div>
    </accordion-group>
</accordion>