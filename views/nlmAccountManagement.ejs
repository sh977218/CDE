<div class="container">
<div>{{message}}</div>
<div class="row-fluid">
    <div class="span4">
        <h4>NLM Admins</h4>
        <div class="row-fluid" ng-repeat="u in nlmAdmins">
            <div class="span11">{{u.username}}</div>
            <div class="span1" ng-show="nlmAdmins.length > 1"><i class="icon-trash" ng-click="removeNlmAdmin(u._id)"></i></div>
        </div>
        <div class="row-fluid input-prepend input-append">
            <input class="span10" type="text" ng-model="adminUsername"></input>
            <span class="add-on" ng-click="addNlmAdmin()">+</span>
        </div>
    </div>

    <div class="span4">
        <h4>Manage Contexts</h4>
        <div class="row-fluid" ng-repeat="c in contexts">
            <div class="span11">{{c.name}}</div>
            <div class="span1"><i class="icon-trash" ng-click="removeContext(c._id)"></i></div>
        </div>
        <div class="row-fluid input-prepend input-append">
            <input class="span10" type="text" ng-model="contextName"></input>
            <span class="add-on" ng-click="addContext()">+</span>
        </div>
    </div>
    
    <div class="span4">
        <h4>Context Admins</h4>
        <div class="row-fluid" ng-repeat="con in contextAdmins">
            <div class="span4">{{con.name}}</div>
            <div class="span8">
                <div class="row-fluid" ng-repeat="us in con.users">
                    <div class="span11">{{us.username}}</div>
                    <div class="span1"><i class="icon-trash" ng-click="removeContextAdmin(con.name, us._id)"></i></div>
                </div>
            </div>
        </div>
        <div class="row-fluid input-prepend input-append">
            <select class="span5" type="text" ng-model="adminContextName">
                <option value="">--</option>
                <option ng-repeat="c in contexts" ng-value="c.name">{{c.name}}</option>
            </select>
            <input class="span5" type="text" ng-model="contextAdminUsername"></input>
            <span class="add-on" ng-click="addContextAdmin()">+</span>
        </div>
    </div>


</div>    
</div>