<div ng-controller="SaveCdeCtrl">
<h3>Values Allowed</h3>
<dl class="dl-horizontal">
  <dt>Value Type: </dt>
  <dd>
      <span ng-show="editDtMode">
          <select ng-model="cde.valueDomain.datatype">
              <option value="" >None Selected</option>
              <option value="Value List">Value List</option>
              <option value="Text">Text</option>
              <option value="Date">Date</option>
              <option value="Integer">Integer</option>
              <option value="Float">Float</option>
          </select>
          <i class="icon-check" ng-click="editDtMode = false; stageCde(cde)" id="confirmDatatype"></i>
          <i class="icon-remove" ng-click="editDtMode = false"></i>
     </span>
      <span ng-hide="editDtMode"><i ng-show="isAllowed(cde)" class="icon-edit" ng-click="editDtMode = true"></i> {{cde.valueDomain.datatype | placeholdEmpty}}</span>
  </dd>
</dl>

<div ng-show="cde.valueDomain.datatype == 'Value List'">
    <%- include deDatatypeValueList.ejs %>
</div>

<div ng-show="cde.valueDomain.datatype == 'Text'">
    <%- include deDatatypeText.ejs %>
</div>

<div ng-show="cde.valueDomain.datatype == 'Integer'">
    <%- include deDatatypeInt.ejs %>
</div>

<div ng-show="cde.valueDomain.datatype == 'Float'">
    <%- include deDatatypeFloat.ejs %>
</div>

<div ng-show="cde.valueDomain.datatype == 'Date'">
    <%- include deDatatypeDate.ejs %>
</div>


</div>

    